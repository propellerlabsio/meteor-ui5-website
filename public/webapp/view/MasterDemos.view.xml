<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="webapp.controller.MasterDemos">
  <Page id="master"
      title="Demos"
      icon="sap-icon://action"
      showNavButton="true"
      navButtonPress="onPressBack"
      class="sapUiStdPage">
    <headerContent>

      <!-- Filter menu button -->
      <Button
          icon="sap-icon://clear-filter"
          visible="{= (${viewState>/query/groupId} !== undefined)}"
          type="Emphasized"
          press="onClearFilterPress"/>
      <MenuButton
          icon="sap-icon://filter"
          visible="{= (${viewState>/query/groupId} === undefined)}"
          buttonMode="Regular">
        <menu>
          <Menu itemSelected="onFilterSelected"
              items="{/DemoGroups}">
            <MenuItem text="{title}" />
          </Menu>
        </menu>
      </MenuButton>
    </headerContent>
    <subHeader>

      <!-- Search field -->
      <Toolbar>
        <SearchField search="onSearch" />
      </Toolbar>
    </subHeader>
    <content>

      <!-- List of demos -->
      <List id="demosList"
          itemPress="onDemoSelect"
          items="{
      			path: '/Demos',
      			sorter: {
      				path: 'groupId',
      				descending: false,
      				group: true
      			},
      			groupHeaderFactory: '.getGroupHeader'
      		}"
          mode="SingleSelectMaster">
        <items>
          <!-- Item in demos list -->
          <StandardListItem title="{title}"
              type="Active"
              selected="{= (${viewState>/demoId} === ${_id})}" />
        </items>
      </List>
    </content>
  </Page>
</mvc:View>
