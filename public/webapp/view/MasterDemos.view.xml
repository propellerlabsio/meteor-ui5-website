<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="website.controller.MasterDemos">
  <Page id="master"
      title="Demos"
      icon="sap-icon://action"
      showNavButton="true"
      navButtonPress="onPressBack"
      class="sapUiStdPage">
    <subHeader>
      <Toolbar>
        <SearchField search="onSearch" />
      </Toolbar>
    </subHeader>
    <content>
      <List id="demosList"
          itemPress="onDemoSelect"
          items="{
      			path: '/Demos',
      			sorter: {
      				path: 'groupId',
      				descending: false,
      				group: true
      			},
      			groupHeaderFactory: '.getGroupHeader'
      		}"
          mode="SingleSelectMaster">
        <items>
          <StandardListItem
              title="{title}"
              type="Active"
              selected="{= (${viewState>/demoId} === ${_id})}" />
        </items>
      </List>
    </content>
  </Page>
</mvc:View>
