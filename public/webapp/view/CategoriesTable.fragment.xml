<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
    <Table id="CategoriesTable" items="{/Categories}" visible="true" fixedLayout="false">
        <columns>
            <Column>
                <Text text="Category"/>
            </Column>
            <Column>
                <Text text="Description"/>
            </Column>
            <Column></Column>
        </columns>
        <ColumnListItem >
            <cells>
                <ObjectIdentifier title="{CategoryName}"/>
                <Text text="{Description}"/>
                <Image src="{path: 'Picture', formatter: '.formatter.dataUrlForMsImage'}"/>
            </cells>
        </ColumnListItem>
    </Table>
</core:FragmentDefinition>
