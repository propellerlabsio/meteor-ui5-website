<mvc:View xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:meteor-ui5-demo="meteor-ui5-demo.control"
    xmlns="sap.m"
    controllerName="meteor-ui5-demo.controller.BindingExamples">
    <Page id="BindingExamples"
        title="Binding Examples"
        class="sapUiStdPage">
        <content>
            <List id="BindingExamplesTable"
                showSeparators="None"
                backgroundDesign="Transparent"
                items="{/BindingExamples}">
                <CustomListItem class="sapUiNoMarginTop">
                    <Panel id="panelExample"
                        expandable="true"
                        expanded="false"
                        expand="onExampleExpand"
                        width="auto"
                        headerText="{title}"
                        class="sapUiNoMarginTop">
                        <content>
                            <Text text="{description}" />
                            <IconTabBar expanded="true"
                                expandable="false"
                                class="sapUiResponsiveContentPadding">
                                <items>
                                    <IconTabFilter id="tabBindingCode"
                                        key="bindingCode"
                                        text="Binding">
                                        <meteor-ui5-demo:SourceCodeViewer sourceCode="{bindingFunction}"
                                            hljsLanguage='js' />
                                    </IconTabFilter>
                                    <IconTabFilter id="tabViewCode"
                                        key="viewCode"
                                        text="View" />
                                    <IconTabFilter id="tabOutput"
                                        key="output"
                                        text="Output">
                                        <!-- <core:Fragment fragmentName="{viewFragment}" type="XML"/> -->
                                    </IconTabFilter>
                                </items>
                            </IconTabBar>
                        </content>
                    </Panel>
                </CustomListItem>

                <!-- <ColumnListItem
                  class="navTableItemLayout"
                  type="Navigation"
                  press="onListItemPress"
                  custom:id="{_id}">
                    <cells>
                        <ObjectIdentifier title="{title}"/>
                        <Text text="{type}"/>
                        <Text text="{description}"/>
                    </cells>
                </ColumnListItem> -->
            </List>
        </content>
    </Page>
</mvc:View>
