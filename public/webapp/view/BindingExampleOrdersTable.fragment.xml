<core:FragmentDefinition
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m">

  <Table id="OrdersTable">
      <columns>
        <Column>
          <Label text="Mongo ID" />
        </Column>
        <Column>
          <Label text="OrderID" />
        </Column>
      </columns>

      <ColumnListItem id="OrdersItem">
        <cells>
          <Text text="{_id}"/>
          <Text text="{OrderID}"/>
        </cells>
      </ColumnListItem>
  </Table>
      <!-- number="{= ${Details}.length}" -->
</core:FragmentDefinition>
