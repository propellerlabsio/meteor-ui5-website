<mvc:View xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="website.demo.binding.some-orders.SomeOrders">

    <!-- List some orders in table -->
    <Table id="OrdersTable">
        <!-- Info tool bar for displaying active filter criteria -->
        <infoToolbar>
            <Toolbar id="OrdersFilterBar"
                active="true"
                visible="true">
                <Label id="OrdersFilterLabel"
                    text="?" />
            </Toolbar>
        </infoToolbar>

        <!-- Columns -->
        <columns>
            <core:Fragment fragmentName="website.demo.binding.OrdersTableColumns"
                type="XML" />
        </columns>

        <!-- Item contents -->
        <core:Fragment fragmentName="website.demo.binding.OrdersTableItem"
            type="XML" />
    </Table>


</mvc:View>
