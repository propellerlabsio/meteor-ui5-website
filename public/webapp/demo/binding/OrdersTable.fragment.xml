<core:FragmentDefinition
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m">

  <Table id="OrdersTable">
      <columns>
        <Column>
          <Label text="_id" />
        </Column>
        <Column>
          <Label text="CustomerID" />
        </Column>
        <Column>
          <Label text="Items.length" />
        </Column>
        <Column>
          <Label text="Freight" />
        </Column>
        <Column>
          <Label text="ShipCity" />
        </Column>
        <Column>
          <Label text="ShipCountry" />
        </Column>
      </columns>

      <ColumnListItem id="OrdersItem">
        <cells>
          <Text text="{_id}"/>
          <Text text="{CustomerID}"/>
          <Text text="{= ${Items}.length}"/>
          <Text text="{Freight}"/>
          <Text text="{ShipCity}"/>
          <Text text="{ShipCountry}"/>
        </cells>
      </ColumnListItem>
  </Table>
</core:FragmentDefinition>
