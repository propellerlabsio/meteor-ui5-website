<core:FragmentDefinition
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m">

  <Table id="OrdersTable">
      <!-- Info tool bar for displaying active filter criteria -->
      <infoToolbar>
          <Toolbar id="OrdersFilterBar" active="true" visible="false">
              <Label id="OrdersFilterLabel" text="?"/>
          </Toolbar>
      </infoToolbar>

      <!-- Columns -->
      <columns>
        <Column>
          <Label text="Order" />
        </Column>
        <Column>
          <Label text="Customer" />
        </Column>
        <Column>
          <Label text="Items" />
        </Column>
        <Column>
          <Label text="Freight" />
        </Column>
        <Column>
          <Label text="City" />
        </Column>
        <Column>
          <Label text="Country" />
        </Column>
      </columns>

      <!-- Item -->
      <ColumnListItem id="OrdersItem">
        <cells>
          <Text text="{_id}"/>
          <Text text="{CustomerID}"/>
          <Text text="{= ${Items}.length}"/>
          <Text text="{Freight}"/>
          <Text text="{ShipCity}"/>
          <Text text="{ShipCountry}"/>
        </cells>
      </ColumnListItem>
  </Table>
</core:FragmentDefinition>
