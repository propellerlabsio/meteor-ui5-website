<mvc:View
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="meteor-ui5.demo.binding.AllOrders">

    <!-- Show message re limit of 100 at top of list -->
    <core:Fragment id="topMessage" fragmentName="meteor-ui5.demo.binding.MessageLimit100" type="XML"/>

    <!-- List all orders in table -->
    <Table id="OrdersTable" items="{/Orders}">
        <!-- Columns -->
        <columns>
            <core:Fragment fragmentName="meteor-ui5.demo.binding.OrdersTableColumns"
                type="XML" />
        </columns>

        <!-- Item contents -->
        <core:Fragment fragmentName="meteor-ui5.demo.binding.OrdersTableItem"
            type="XML" />
    </Table>

    <!-- Repeat message re limit of 100 at bottom of list -->
    <core:Fragment id="bottomMessage" fragmentName="meteor-ui5.demo.binding.MessageLimit100" type="XML"/>

</mvc:View>
