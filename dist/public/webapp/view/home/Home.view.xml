<mvc:View controllerName="webapp.controller.Home"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:meteor-ui5="webapp.control"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m">
  <Page id="Home"
      title="Meteor-UI5"
      class="sapUiStdPage">
    <content>

      <!-- "Fork me on Github" ribbon -->
      <html:a href="https://github.com/propellerlabsio/meteor-ui5">
        <html:img style="position: absolute; top: 0; right: 0; border: 0; z-index: 5;"
            src="https://camo.githubusercontent.com/a6677b08c955af8400f44c6298f40e7d19cc5b2d/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f677261795f3664366436642e706e67"
            alt="Fork me on GitHub"
            data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png" /></html:a>

      <!-- Rows -->
      <VBox>
        <!-- Intro text -->
        <meteor-ui5:MarkdownViewer
          class="sapUiResponsiveMargin"
          markdownFile="webapp/view/home/MeteorUI5Intro.md"/>

        <!-- Meteor + UI5 summary row     -->
        <l:Grid hSpacing="2"
            defaultSpan="L6 M6 S10">

          <!-- Meteor summary intro -->
          <HBox alignItems="Center">
            <Image src="/art/logos/meteor-full.png"
                press="onPressGotoMeteor"
                width="100px"></Image>
            <meteor-ui5:MarkdownViewer
              markdownFile="webapp/view/home/MeteorSummary.md"/>
          </HBox>

          <!-- UI5 summary intro -->
          <HBox alignItems="Center">
            <Image src="/art/logos/openui5-full.png"
                press="onPressGotoUi5"
                width="100px"></Image>
            <meteor-ui5:MarkdownViewer
              markdownFile="webapp/view/home/OpenUI5Summary.md"/>
          </HBox>
        </l:Grid>

        <!-- Meteor UI5 Packages -->
        <meteor-ui5:MarkdownViewer
          class="sapUiResponsiveMargin"
          markdownText="# Packages"/>
        <FlexBox justifyContent="Center">
          <Image
              class="sapUiResponsiveMargin imageToFit"
              src="art/PackagesDiagram.png"
              densityAware="true" />
        </FlexBox>

      </VBox>

    </content>

    <!-- Footer toolbar -->
    <footer>
      <Toolbar>
        <Button text="Meteor ({viewModel>/meteorRelease})"
            press="onPressGotoMeteor" />
        <ToolbarSpacer/>
        <Text text="Â© PropellerLabs.io - 2016" />
        <ToolbarSpacer/>
        <Button text="OpenUI5 ({viewModel>/ui5Version})"
            press="onPressGotoUi5" />
      </Toolbar>
    </footer>
  </Page>
</mvc:View>
