<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:custom="webapp.control"
    xmlns="sap.m"
    controllerName="webapp.controller.tutorial.Step">

  <Page id="compareModel"
      binding="{viewState>/}"
      title="{viewState>title}"
      class="sapUiStdPage">
    <content>

      <!-- Step instructions -->
      <custom:MarkdownViewer
        class="sapUiResponsiveMargin"
        markdownFile="/docs/tutorial/{viewState>step}-{viewState>title}.md" />
    </content>
    <footer>
      <Toolbar>
            <Button
              press="onPressPreviousStep"
              icon="sap-icon://navigation-left-arrow"
              text="Previous"/>
            <ToolbarSpacer />
			     <Button
             press="onPressShowSourceOnGithub"
             icon="art/icons/GitHub-Mark-Light-32px.png"
             iconFirst="false"
             text="View source"
             iconDensityAware="false"
             tooltip="View source on Github." />
            <ToolbarSpacer />
            <Button
              type="Emphasized"
              press="onPressNextStep"
              icon="sap-icon://navigation-right-arrow"
              text="Next"/>
      </Toolbar>
    </footer>
  </Page>
</mvc:View>
