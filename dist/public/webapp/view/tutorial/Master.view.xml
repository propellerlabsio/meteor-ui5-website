<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="webapp.controller.MasterTutorial">
  <Page id="master"
      title="Tutorial"
      icon="sap-icon://action"
      showNavButton="true"
      navButtonPress="onPressBack"
      class="sapUiStdPage">
    <content>

      <!-- List of tutorial steps -->
      <List id="demosList"
          itemPress="onItemPress"
          mode="SingleSelectMaster">
        <items>
          <StandardListItem id="introduction"
              title="Introduction"
              type="Active"
              custom:to="tutorial" />
          <StandardListItem id="quickstart"
              title="Quickstart"
              type="Active"
              custom:to="tutorialQuickstart" />
          <StandardListItem id="step01"
              title="01 - Views"
              type="Active"
              custom:to="tutorialStep01" />
          <StandardListItem id="step02"
              title="02 - Collections"
              type="Active"
              custom:to="tutorialStep02" />
          <StandardListItem id="step03"
              title="03 - Create"
              type="Active"
              custom:to="tutorialStep03" />
          <StandardListItem id="step04"
              title="04 - Update"
              type="Active"
              custom:to="tutorialStep04" />
          <StandardListItem id="step05"
              title="05 - Delete"
              type="Active"
              custom:to="tutorialStep05" />
          <StandardListItem id="step06"
              title="06 - UI State"
              type="Active"
              custom:to="tutorialStep06" />
        </items>
      </List>
    </content>
  </Page>
</mvc:View>
