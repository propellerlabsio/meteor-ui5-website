<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="webapp.controller.tutorial.Master">
  <Page id="master"
      title="Tutorial"
      icon="sap-icon://action"
      showNavButton="true"
      navButtonPress="onPressBack"
      class="sapUiStdPage">
    <content>

      <!-- List of tutorial fixed pages -->
      <List id="tutorialsListFixed"
          itemPress="onFixedItemPress"
          mode="SingleSelectMaster">
        <items>
          <StandardListItem id="introduction"
              title="Introduction"
              type="Active"
              custom:to="tutorial" />
          <StandardListItem id="quickstart"
              title="Quickstart"
              type="Active"
              custom:to="tutorialQuickstart" />
        </items>
      </List>

      <!-- List of tutorial steps from database -->
      <List id="tutorialsListSteps"
          itemPress="onStepPress"
          items="{
      			path: '/Tutorials',
      			sorter: {
      				path: 'step',
      				descending: false
      			}
      		}"
          mode="SingleSelectMaster">
        <items>
          <!-- Item in demos list -->
          <StandardListItem title="{step}: {title}"
              type="Active"
              selected="{= (${viewState>/demoId} === ${_id})}" />
        </items>
      </List>

    </content>
  </Page>
</mvc:View>
